<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="Demo, Koç,University" />
    <title>@ViewData["Title"] - KUSYS_Demo</title>
    <script src="/thema/js/jquery-2.2.3.min.js"></script>
    <!-- //Custom-JavaScript-File-Links -->
    <script src="/js/site.js"></script>
    <script src="/thema/js/jquery.desoslide.js"></script>
    <script src="/thema/js/jquery.flexisel.js"></script>
    <script src="/thema/js/move-top.js"></script>
    <script src="/thema/js/easing.js"></script>
    <script src="/thema/js/bootstrap.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <link href="/thema/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="/thema/css/jquery.desoslide.css" rel="stylesheet">
    <link href="/thema/css/style.css" rel='stylesheet' type='text/css' />
    <link href="/thema/css/fontawesome-all.css" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800"
          rel="stylesheet">
    
</head>

<body>
    <!--Header-->

    <header>
        <div class="top-bar_sub_w3layouts container-fluid">
            <div class="row">
                <div class="col-md-4 logo text-left">
                    <a class="navbar-brand" href="/Student/Index">
                        <i class="fab fa-linode"></i> KUSYS-Demo
                    </a>
                </div>
            </div>
        </div>

        <div class="header_top" id="home">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <button class="navbar-toggler navbar-toggler-right mx-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" asp-area="" asp-controller="Student" asp-action="Index">Students</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Course" asp-action="Index">Courses</a>
                        </li>
                    </ul>
                </div>
            </nav>

        </div>
    </header>

    <section class="main-content-w3layouts-agileits">
        <div class="container">
            <div class="row">
                @RenderBody()
            </div>
        </div>
    </section>
    <div class="footer-cpy text-center">
        <div class="w3layouts-agile-copyrightbottom">
            <p>
                © 2022 KUSYS. All Rights Reserved
            </p>

        </div>
    </div>
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <!-- requried-jsfiles-for owl -->
    <script>
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({
                    scrollTop: $(this.hash).offset().top
                }, 900);
            });
        });
    </script>
    <!--// end-smoth-scrolling -->

    <script>
        $(document).ready(function () {
            var defaults = {
                containerID: 'toTop', // fading element id
                containerHoverID: 'toTopHover', // fading element hover id
                scrollSpeed: 1200,
                easingType: 'linear'
            };
            $().UItoTop({
                easingType: 'easeOutQuart'
            });

        });
    </script>
    <a href="#" class="scroll" id="toTop" style="display: block;">
        <span id="toTopHover" style="opacity: 1;"> </span>
    </a>
    @Html.Partial("~/Views/Shared/_genericModalPartial.cshtml")
</body>

</html>